/* pages/draw/index.wxss */

.container {
    display: block;
    padding: 10px;
    overflow: hidden;
}

.qu {
    text-align: center;
    margin: 10rpx 0 20rpx;
    font-size: 45rpx;
    color: #3a6f5d;
}

.qu text{
}

.canvas_area {
    border-radius: 20rpx;
    border: 10rpx solid #3a6f5d;
}

canvas {
    width: 100%;
    height: 700rpx;
}

button {
    border: 1px solid #eeeeee;
    border-radius: 50px;
    font-size: 12px;
    background-color: rgb(214, 211, 211);
    color: #fff;
    width: 100rpx;
    height: 100rpx;
    margin: 15rpx 5rpx 0 0;
    float: left;
}

button[data-name='red'] {
    color: red;
    background-color: red;
}

button[data-name='black'] {
    color: black;
    background-color: black;
}

button[data-name='yellow'] {
    color: yellow;
    background-color: yellow;
}

button[data-name='blue'] {
    color: blue;
    background-color: blue;
}